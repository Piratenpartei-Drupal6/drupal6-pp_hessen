function pp_hessen_update() {
	// run cron
		$ret = pp_hessen_cron();

	// clear cache
		cache_clear_all(NULL, 'pp_hessen');

	// return
		return $ret;
}

/**
*
*/
function pp_hessen_cron() {
	global $base_path;

	$url = variable_get('pp_hessen_url', NULL);
	$site = variable_get('pp_hessen_site', NULL);
	$checksum = variable_get('pp_hessen_checksum', NULL);

	$vars = array(
		"url" => $url,
		"site" => $site,
	);

	$debug = false;

	if (!empty($url) && !empty($site)) {
		if ($debug) echo "<pre>";

		$url = "http://".$url."/wiki/index.php?title=".$site."&printable=yes";
		if ($debug) echo $url."\n";
		if ($debug) echo "\n\n";

		$doc = new DOMDocument('1.0', 'UTF-8');
		@$doc->loadHTMLFile($url);
		$doc->encoding = 'utf-8';

		$trs = $doc->getElementsByTagName('tr');

		$members = array();
		for ($i = 0; $i < $trs->length; $i++) {
			$ths = $trs->item($i)->getElementsByTagName('th');
			$tds = $trs->item($i)->getElementsByTagName('td');
			if ($tds->length == 6) {
				$region = trim((string)$tds->item(0)->nodeValue);
				$count = trim((string)$tds->item(1)->nodeValue);
				if (is_numeric($count)) {
					$members[$region] = $count;
				}
/*			} else if ($tds->length == 5) {
				$region = trim((string)$ths->item(0)->nodeValue);
				$count = trim((string)$tds->item(0)->nodeValue);
				if (is_numeric($count)) {
					$members[$region] = $count;
				}
*/			}
		}
		unset($members["Total"]);
		if ($debug) print_r($members);
		if ($debug) echo "\n\n";

		$regions = pp_hessen_get_regions();
		#if ($debug) print_r($regions);
		$t = array();
		foreach($regions as $region => $arr) {
			$region = Encoding::toUTF8($region);
			$t[$region] = $arr;
			if ($debug) echo $region." ".mb_detect_encoding($region)."\n";
		}
		$regions = $t;
		if ($debug) echo "\n\n";

		$sites = pp_hessen_get_sites();
		#if ($debug) print_r($sites);
		$t = array();
		foreach($sites as $region => $arr) {
			$region = Encoding::toUTF8($region);
			$t[$region] = $arr;
			if ($debug) echo $region." ".mb_detect_encoding($region)."\n";
		}
		$sites = $t;
		if ($debug) echo "\n\n";

		$xml = '<?xml version="1.0" encoding="UTF-8" standalone="yes"?>';
		$xml .= "\n";
		$xml .= "<mitglieder>\n";
		$xml .= "\t<landesverband name='Hessen' mitglieder='".array_sum($members)."' website='http://www.piratenpartei-hessen.de' />\n";
		$xml .= "\t<regionen>\n";
		foreach ($members as $name => $count) {
			$name = Encoding::fixUTF8($name);
			$url = $sites[$regions[$name]["site"]]["url"];
			$jsid = $sites[$regions[$name]["site"]]["id"];
			$website = $url[0]."://".$url[1];
			if ($debug) echo $name." ".mb_detect_encoding($name)." ".$regions[$name]."\n";
			$xml .= "\t\t<region name='".$name."' mitglieder='".$count."' website='".$website."' jsid='".$jsid."' />\n";
		}
		$xml .= "\t</regionen>\n";
		$xml .= "</mitglieder>\n";

		$xml = str_replace("'", '"', $xml);

		if ($debug) echo htmlentities($xml);

		$chksm = sha1($xml.$regions.$sites);
		if ($checksum != $chksm) {
			file_put_contents(getcwd() . $base_path . "mitglieder.xml", $xml);

			variable_set('pp_hessen_checksum', $chksm);
			variable_set('pp_hessen_last_run', time());
			variable_set('pp_hessen_count', array_sum($members));

			$ret = t("@members hessische Piraten im Wiki (@checksum) gefunden.", array('@members' => array_sum($members), '@checksum' => $chksm));
		} else {
			$ret = t("Im Wiki gab es keine neuen Änderungen.");
		}

		if ($debug) echo "</pre>";
	} else {
		$ret = t("Cron run failed: Missing variables");
		watchdog('pp_hessen', $ret, $vars, WATCHDOG_ERROR);
	}

	return $ret;
}

function pp_hessen_reset() {
	variable_set('pp_hessen_checksum', "-");
	variable_set('pp_hessen_last_run', "-");
	variable_set('pp_hessen_count', "-");

	drupal_goto('admin/settings/piraten/hessen/settings');
}

